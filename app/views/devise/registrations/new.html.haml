%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .col-xs-12.col-sm-9.col-md-6 
    =f.input :first_name, label: 'First name'
    =f.input :last_name, label: 'Last name'
    =f.input :email, as: :email, label: 'Email'
    =f.input :password, as: :password, label: 'Password'
    - if @validatable
      =f.hint "(#{@minimum_password_length} characters minimum)"
    =f.input :password_confirmation, as: :password, label: "Password confirmation"
    =f.button :submit
    %br
    = render "devise/shared/links"
